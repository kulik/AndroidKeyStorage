<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/lock_fragment"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
    <EditText android:id="@+id/et_code"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:hint="****"
              style="@style/CodeEditText"
              android:focusable="false"
              android:focusableInTouchMode="false"
              android:layout_centerInParent="true"

              android:layout_alignParentTop="true"/>

    <android.support.v4.widget.GridLayout android:layout_width="wrap_content"
                android:layout_height="fill_parent"

                android:columnCount="3"
                android:rowCount="4"
                android:layout_below="@id/et_code">

        <Button android:id="@+id/num_1"
                style="@style/Codes"
                android:text="1"/>
        <Button android:id="@+id/num_2"
                style="@style/Codes"
                android:text="2"/>
        <Button android:id="@+id/num_3"
                style="@style/Codes"
                android:text="3"/>
        <Button android:id="@+id/num_4"
                style="@style/Codes"
                android:text="4"/>
        <Button android:id="@+id/num_5"
                style="@style/Codes"
                android:text="5"/>
        <Button android:id="@+id/num_6"
                style="@style/Codes"
                android:text="6"/>
        <Button android:id="@+id/num_7"
                style="@style/Codes"
                android:text="7"/>
        <Button android:id="@+id/num_8"
                style="@style/Codes"
                android:text="8"/>
        <Button android:id="@+id/num_9"
                style="@style/Codes"
                android:text="9"/>
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"/>

        <Button android:id="@+id/num_0"
                style="@style/Codes"
                android:text="0"/>
        <Button android:id="@+id/enter_btn"
                style="@style/Codes"
                android:text="Etr"/>
    </android.support.v4.widget.GridLayout>


</RelativeLayout>